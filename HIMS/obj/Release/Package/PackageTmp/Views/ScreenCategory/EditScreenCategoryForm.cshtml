@model DataCore.Models.ScreenCategory
@using (Html.BeginForm("EditScreenCategory", "ScreenCategory", FormMethod.Post, new { id = "EditScreenCategory" }))
{
    <div class="modal-header bg-slate-800" style="border-radius:0">

        @if (string.IsNullOrEmpty(Model.GUID))
        {
            <h5 class="modal-title">Add Screen Category Form</h5>
        }
        else
        {
            <h5 class="modal-title">Edit ScreenCategory Form</h5>
        }
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-6 mt-1">
                    <label class="font-weight-bold">Screen Category Name</label>
                    @Html.TextBoxFor(a => a.ScreenCategoryName, new { type = "text", @class = "form-control round", placeholder = "", required = "required", autocomplete = "off" })
                    @Html.HiddenFor(a => a.ID)
                    @Html.HiddenFor(a => a.GUID)
                </div>
                <div class="col-lg-6 mt-1">
                    <label class="font-weight-bold">Icon Class</label>
                    @Html.TextBoxFor(a => a.Icon, new { type = "text", @class = "form-control round", placeholder = "", required = "required", autocomplete = "off" })

                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancle</button>
        @if (string.IsNullOrEmpty(Model.GUID))
        {
            <button type="submit" onclick="" class="btn btn-primary btn-ladda btn-ladda-spinner" data-spinner-color="#333" data-style="zoom-in"><span class="ladda-label">Save</span></button>
        }
        else
        {
            <button type="submit" onclick="" class="btn btn-primary btn-ladda btn-ladda-spinner" data-spinner-color="#333" data-style="zoom-in"><span class="ladda-label">Edit</span></button>
        }
    </div>
}