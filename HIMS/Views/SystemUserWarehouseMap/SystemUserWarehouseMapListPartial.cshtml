@model  IEnumerable<DataCore.Models.SystemUserWarehouseMap>

@{<div class=" card mt-10" style="border-radius:10px">
      <div  class="table-responsive" style="border-radius:10px">
          <table class="table table-sm">
              <thead class="bg-slate-800">
                  <tr>
                      <th width="5%">#</th>
                      <th width="20%">Screen Name</th>
                      <th width="10%" class="text-center">Access</th>
                  </tr>
              </thead>
              @{
                  var count = 1;
                  var CP = Convert.ToInt32(1);
                  CP = CP - 1;
                  count = (CP * DataCore.CommonClass.PageSize) + 1;
                  foreach (var screen in Model)
                  {
                      var accessid = screen.WarehouseName.Replace(" ", String.Empty) + "Access";
                      <tr>
                          <td width="5%">@count</td>
                          <td width="20%">@screen.WarehouseName </td>
                          <td width="10%" class="text-center">
                              @if (screen.AllowAccess == 1)
                              {

                                  <div class="checkbox checkbox-switchery">
                                      <label>
                                          <input type="checkbox" id="@accessid" class="switchery checkbox-switch" onclick="Access('@screen.WarehouseGUID','@accessid');" checked="checked">
                                          <span class="text-success">Granted</span>
                                      </label>
                                  </div>
                              }
                              else
                              {
                                  <div class="checkbox checkbox-switchery">
                                      <label>
                                          <input type="checkbox" id="@accessid" onclick="Access('@screen.WarehouseGUID','@accessid');" class="switchery">
                                          <span class="text-danger">Denied&nbsp;</span>
                                      </label>
                                  </div>
                              }

                          </td>
                      </tr>
                      count++;
                  }
              }
          </table>
      </div>
</div>

                    
      

}

