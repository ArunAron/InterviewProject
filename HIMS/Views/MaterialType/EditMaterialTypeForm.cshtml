@model DataCore.Models.MaterialType
@using (Html.BeginForm("EditMaterialType", "MaterialType", FormMethod.Post, new { id = "EditMaterialType" }))
{
<div class="modal-header bg-slate-800" style="border-radius:0">

    @if (string.IsNullOrEmpty(Model.GUID))
    {
        <h5 class="modal-title">Add Material Type Form</h5>
    }
    else
    {
        <h5 class="modal-title">Edit Material Type Form</h5>
    }
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <label class="font-weight-bold">Material Type Name</label>
                    @Html.TextBoxFor(a => a.MaterialTypeName, new { type = "text", @class = "form-control round", placeholder = "", required = "required" , autocomplete = "off" })
                    @Html.HiddenFor(a => a.ID)
                    @Html.HiddenFor(a => a.GUID)
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancle</button>
        @if (string.IsNullOrEmpty(Model.GUID))
        {
            <button type="submit" onclick="" class="btn btn-primary btn-ladda btn-ladda-spinner" data-spinner-color="#333" data-style="zoom-in"><span class="ladda-label">Save</span></button>
        }
        else
        {
            <button type="submit" onclick="" class="btn btn-primary btn-ladda btn-ladda-spinner" data-spinner-color="#333" data-style="zoom-in"><span class="ladda-label">Edit</span></button>
        }
    </div>
}