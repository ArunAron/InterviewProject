@model DataCore.Models.Role
@using (Html.BeginForm("EditRole", "Role", FormMethod.Post, new { id = "EditRole" }))
{
<div class="modal-header bg-slate-800" style="border-radius:0">

    @if (string.IsNullOrEmpty(Model.GUID))
    {
        <h5 class="modal-title">Add Role Form</h5>
    }
    else
    {
        <h5 class="modal-title">Edit Role Form</h5>
    }
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 mt-1">
                    <label class="font-weight-bold">Role Name</label>
                    @Html.TextBoxFor(a => a.RoleName, new { type = "text", @class = "form-control round", placeholder = "", required = "required", autocomplete = "off" })
                    @Html.HiddenFor(a => a.ID)
                    @Html.HiddenFor(a => a.GUID)
                </div>
                <div class="col-sm-12 mt-1">
                    <label class="font-weight-bold">Description</label>
                    @Html.TextAreaFor(a => a.Description, new { type = "text", @class = "form-control round", placeholder = "", required = "required", autocomplete = "off" , style ="resize:none" })
                  
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default rounded-round" data-dismiss="modal">Cancle</button>
        @if (string.IsNullOrEmpty(Model.GUID))
        {
            <button type="submit" onclick="" class="btn btn-primary rounded-round btn-ladda btn-ladda-spinner" data-spinner-color="#333" data-style="zoom-in"><span class="ladda-label">Save</span></button>
        }
        else
        {
            <button type="submit" onclick="" class="btn btn-primary rounded-round btn-ladda btn-ladda-spinner" data-spinner-color="#333" data-style="zoom-in"><span class="ladda-label">Edit</span></button>
        }
    </div>
}